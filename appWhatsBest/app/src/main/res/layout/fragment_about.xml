<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="myhelloworldapplication.com.forma203.appwhatsbest.Fragments.AboutFragment">


    <ImageView
        android:id="@+id/txtlogo"
        android:src="@drawable/title_whatsbest"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_about"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtlogo"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/champagne"
        />

    <Button
        android:id="@+id/btn_ret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_text"
        android:layout_marginTop="15dp"
        android:text="Return"
        android:theme="@style/AppTheme.Button"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_sparklingkitten"
        app:layout_constraintTop_toBottomOf="@id/btn_ret"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




</android.support.constraint.ConstraintLayout>
