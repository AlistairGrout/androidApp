<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    tools:context="myhelloworldapplication.com.forma203.appwhatsbest.GameActivity">


            <ImageView
                android:id="@+id/txtlogo"
                android:src="@drawable/title_whatsbest"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />


            <TextView
                android:id="@+id/txt_1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="void"
                android:layout_marginTop="200dp"
                app:layout_constraintLeft_toRightOf="@id/txt_2"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:textAlignment="center"
                android:fontFamily="@font/champagne"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="void"
                android:layout_marginTop="200dp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txt_1"
                app:layout_constraintTop_toBottomOf="parent"
                android:textAlignment="center"
                android:fontFamily="@font/champagne"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn_choice1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Pick"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_choice2"
                app:layout_constraintTop_toBottomOf="@id/txt_2"
                android:theme="@style/AppTheme.Button"
                />

            <Button
                android:id="@+id/btn_choice2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Pick"
                app:layout_constraintLeft_toRightOf="@id/btn_choice1"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_1"
                android:theme="@style/AppTheme.Button"
                />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/logo_whatsbest"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_choice2"

                />




</android.support.constraint.ConstraintLayout>
