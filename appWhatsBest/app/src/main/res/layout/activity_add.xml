<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    tools:context="myhelloworldapplication.com.forma203.appwhatsbest.AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/txtlogo"
            android:src="@drawable/title_whatsbest"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/et_add_choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First choice"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/champagne"
            />

        <EditText
            android:id="@+id/et_add_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Second choice"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/champagne"
            />

        <Button
            android:id="@+id/btn_submit_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:text="Submit"
            android:layout_marginTop="10dp"
            android:theme="@style/AppTheme.Button"
            />


    </LinearLayout>

</ScrollView>
